{
  "parserOptions": {
    "requireConfigFile": false
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "quote-props": [
      "warn",
      "always"
    ],
    "max-len": "off",
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": "always",
        "ObjectPattern": "never",
        "ImportDeclaration": "never"
      }
    ],
    "array-bracket-newline": [
      "error",
      "always"
    ],
    "array-element-newline": [
      "error",
      "always"
    ],
    "object-property-newline": [
      "error"
    ],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true,
        "align": "colon"
      }
    ]
  }
}
